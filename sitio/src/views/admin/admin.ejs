            <td><%= product.sale %> </td>
            <td><button><a href="/products/edit/<%= product.id %>"><i class="far fa-edit"></i></a></button><button><a href=""><i class="far fa-trash-alt"></i></i></a></button></td>
        </tr>
            <% }) %>

