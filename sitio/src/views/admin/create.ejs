<%- include("../partials/head") %> 

<body class="admin-creation">
    <%- include("../partials/header") %> 
    <main class="admin__container">
        <h2 class="admin__title">crear producto</h2> 
        <form class="form-admin" action="" method="POST" > 

            <div class="form-admin__box">
                <input class="form-admin__input" type="file" name="img" id="img" placeholder="Imagen del Producto">
            </div>

            <div class="form-admin__box">
                <input class="form-admin__input" type="text" name="name" placeholder="Nombre del Producto">
            </div>

            
            <div class="form-admin__box">
                <input class="form-admin__input" type="number" name="price" id="price" placeholder="Precio del Producto">
            </div>

            <div class="form-admin__box">
                <select class="form-admin__select" name="sale" id="category">
                    <option class="fom-admin__option" value="true" hidden>Dato del Producto</option>
                    <option class="fom-admin__option" value="true">En Oferta</option>
                    <option class="fom-admin__option" value="false">Destacados</option>
                </select>
            </div>

            <div class="form-admin__box">
                <input class="form-admin__input" type="number" name="discount" id="discount" placeholder="Descuento del Producto">
            </div>

            <div class="form-admin__box">
                <select class="form-admin__select" name="category" id="category">
                    <option class="fom-admin__option" value="true" hidden>Categoria</option>
                    <option class="fom-admin__option" value="mesa">Juegos de Mesa</option>
                    <option class="fom-admin__option" value="rol">Juego de Rol</option>
                    <option class="fom-admin__option" value="previa">Juego de Previa</option>
                </select>
            </div>
            <div class="create-button">
                <button class="create-button__button" type="submit">Crear producto</button>
            </div>
        </form>
    </main>
</body>
</html>